FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     pisoFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         10;

deltaT          0.005;

writeControl    timeStep;

writeInterval   100;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;


functions
{
    // Simple solver diagnostics (safe for laminar)
    solverInfo
    {
        type            solverInfo;
        functionObjectLibs ("libutilityFunctionObjects.so");
        writeControl    timeStep;
        writeInterval   1;
    }

    // Patch-averaged velocity at inlet (optional)
    inletVelocity
    {
        type            patchAverage;
        functionObjectLibs ("libutilityFunctionObjects.so");
        patches         (inlet);
        field           U;
        operation       mean;
        writeControl    timeStep;
        writeInterval   1;
    }

    // Patch-averaged pressure at outlet (optional)
    outletPressure
    {
        type            patchAverage;
        functionObjectLibs ("libutilityFunctionObjects.so");
        patches         (outlet);
        field           p;
        operation       mean;
        writeControl    timeStep;
        writeInterval   1;
    }
}



// ************************************************************************* //
